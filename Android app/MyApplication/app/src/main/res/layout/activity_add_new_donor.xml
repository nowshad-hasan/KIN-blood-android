<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nowshadhasan.databaselab.activity.AddNewDonorActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Name"
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorNameEditText"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bloodGroup"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Blood Group"
                />

            <Spinner
                android:id="@+id/newDonorBloodGroupSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                >

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept"
            android:layout_below="@+id/bloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Department"
                />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorDeptEditText"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/session"
            android:layout_below="@+id/dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Session"
                />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorSessionEditText"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone1"
            android:layout_below="@+id/session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Phone1"
                />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorPhone1EditText"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone2"
            android:layout_below="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Phone2"
                />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorPhone2EditText"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/address"
            android:layout_below="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Address"
                />

            <android.support.design.widget.TextInputEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:id="@+id/addNewDonorAddressEditText"

                />


        </LinearLayout>





        <Button
            android:id="@+id/addNewDonorButton"
            android:layout_marginTop="100dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Donor"
            android:textColor="@color/mdtp_white"
            />

    </RelativeLayout>

</ScrollView>
